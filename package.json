{
  "name": "billerdoc",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Sistema de recibos PDF para peque√±as empresas",
  "author": "",
  "license": "ISC",

  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },

  "build": {
    "appId": "com.billerdoc.app",
    "productName": "Billerdoc",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "zero-devstudio",
        "repo": "billerdoc"
      }
    ]
  },

  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "electron-store": "^11.0.2",
    "pdf-lib": "^1.17.1",
    "electron-updater": "^6.7.3",
    "electron-log": "^5.1.4"
  },

  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "electron-rebuild": "^3.2.9"
  }
}
